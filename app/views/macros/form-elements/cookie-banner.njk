{#
 # New Cookie Banner
 #}
{% macro cookie_banner(
    cms=cms
  ) %}
  <div id="dbs-cookie-banner">
    <div id="main-cookie-banner" class="govuk-cookie-banner govuk-!-display-none" data-nosnippet role="region" aria-label="{{ cms.generalContent.cookieHeader }}">
      <div class="govuk-cookie-banner__message govuk-width-container">

        <div class="govuk-grid-row">
          <div class="govuk-grid-column-two-thirds">
            <h2 class="govuk-cookie-banner__heading govuk-heading-m">{{ cms.generalContent.cookieHeader }}</h2>

            <div class="govuk-cookie-banner__content">
              <p> {{ cms.generalContent.cookieBody1 }} </p>
               <p> {{ cms.generalContent.cookieBody2 }} </p>
            </div>
          </div>
        </div>

        <div class="govuk-button-group">
          <button id="cookie-banner-accept-all" value="accept" type="button" name="cookies" class="govuk-button" data-module="govuk-button">
            {{ cms.generalContent.cookieAccept }}
          </button>
          <button id="cookie-banner-decline-all" value="reject" type="button" name="cookies" class="govuk-button" data-module="govuk-button">
            {{ cms.generalContent.cookieReject }}
          </button>
          <a class="govuk-link" href="/cookies"> {{ cms.generalContent.cookieMore }} </a>
        </div>
      </div>
    </div>

    <div id="confirmation-cookie-banner" class="govuk-cookie-banner govuk-!-display-none" data-nosnippet role="region" aria-label="{{ cms.cookieBanner.confirmationHeader }}">
      <div class="govuk-cookie-banner__message govuk-width-container">

        <div class="govuk-grid-row">
          <div class="govuk-grid-column-two-thirds">

            <div class="govuk-cookie-banner__content">
              <p id="confirmation-cookie-banner-p-accepted" style="display: none;" class="govuk-!-display-none">{{ cms.generalContent.accepted | safe }} <a id='cookie-url' class="govuk-link" href="/cookies"> {{ cms.generalContent.cookieSettings }} </a> </p>
              <p id="confirmation-cookie-banner-p-rejected" style="display: none;" class="govuk-!-display-none">{{ cms.generalContent.rejected | safe }} <a id='cookie-url2' class="govuk-link" href="/cookies"> {{ cms.generalContent.cookieSettings }} </a> </p>
            </div>
          </div>
        </div>

        <div class="govuk-button-group">
          <a id="cookie-banner-confirmation-hide" href="#" role="button" draggable="false" class="govuk-button" data-module="govuk-button">
            {{ cms.generalContent.hide }} 
          </a>
        </div>
      </div>
    </div>
  </div>
{% endmacro %}