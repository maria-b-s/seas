{% macro country(params) %}
    <div class="govuk-form-group country-input-group  {{ params.inputClass }} {{ params.error }}">
        <label class="govuk-label" for="{{ params.id }}">{{ params.label }}</label>
        {% if params.error %}
                {% if params.errorMessage %}
                            <span id="ninonr-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> {{ params.errorMessage  }}
                            </span>
                            {% endif %}
        {% endif %}
        <input id="{{ params.id }}" name="{{params.name}}" type="text" class="govuk-input country-input" value="{{params.value}}"/>
        <div style="display: none;" class="country-dropdown">
    </div>
</div>
{% endmacro %}
